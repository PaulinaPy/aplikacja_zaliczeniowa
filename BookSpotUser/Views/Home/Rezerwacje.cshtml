<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            locale: 'pl',
            themeSystem: 'bootstrap5',
            initialView: 'dayGridMonth',
            dateClick: function(info) {
                 // Formatowanie daty do RRRR-MM-dd
                var formattedDate = info.date.getFullYear() + '-' + 
                                    String(info.date.getMonth() + 1).padStart(2, '0') + '-' + 
                                    String(info.date.getDate()).padStart(2, '0');
                document.getElementById('selectedDate').innerText = info.dateStr;
                var modal = new bootstrap.Modal(document.getElementById('reservationModal'));
                modal.show();
            },
        });

        calendar.render();

        // Dane biurek
        var desks = [
            { id: 1, left: 100, top: 100 },
            { id: 2, left: 200, top: 100 },
            // Dodaj więcej biurek według potrzeb
        ];

        // Tworzenie elementów biurek
        desks.forEach(function(desk) {
            var deskElement = $('<div class="desk" data-desk-id="' + desk.id + '"></div>');
            deskElement.css({
                position: 'absolute',
                width: desk.width + 'px' || '50px',
                height: desk.height + 'px' || '50px',
                left: desk.left + 'px',
                top: desk.top + 'px',
                zIndex: 1, // Ustawienie z-index
                border: '2px solid transparent' // Domyślnie przezroczyste obramowanie
            });
            $('#deskLayout').append(deskElement);
        });

        // Funkcja do dodawania obramowania na kliknięcie w biurko
        $(document).on('click', '.desk', function() {
           // Usunięcie klasy 'selected-desk' z wszystkich biurek
            $('.desk').removeClass('selected-desk');
            // Dodanie klasy 'selected-desk' tylko do klikniętego biurka
            $(this).toggleClass('selected-desk'); // Zmienia klasę na kliknięcie
        });

        $(document).on('click', '#saveBooking', function() {
            // Sprawdzenie, czy biurko jest wybrane
            var selectedDesk = $('.desk.selected-desk');
            if (selectedDesk.length === 0) {
                alert("Proszę wybrać biurko.");
                return;
            }

            var deskId = selectedDesk.data('desk-id');
            var bookedDate = $('#selectedDate').text();
            var userId = $('#userId').val();
            var firstName = $('#firstName').val();
            var lastName = $('#lastName').val();

            // Tworzenie obiektu rezerwacji
            var bookingData = {
                DeskId: deskId,
                BookedDate: bookedDate.toString()+'T08:00',
                UserId: userId,
                FirstName: firstName,
                LastName: lastName
            };

            // Możesz teraz używać bookingData w swoim kodzie
            console.log(bookingData);

            // Wysłanie danych do kontrolera
            $.ajax({
                type: 'POST',
                url: 'http://localhost:5150/BookedDesks/Create', // Upewnij się, że to jest właściwy adres URL
                contentType: 'application/json',
                data: JSON.stringify(bookingData), // Konwertuj obiekt na JSON
                @* data: bookingData, *@
                success: function(response) {
                    // Możesz dodać reakcję po pomyślnym zapisaniu rezerwacji, np. zamknij modal
                    $('#reservationModal').modal('hide');
                    alert("Rezerwacja została zapisana!");
                },
                error: function(xhr, status, error) {
                    alert("Wystąpił błąd: " + error);
                }
            });
        });
    });

</script>

